<% provide(:title, 'Sign up') %>
<h1 class="text-left">Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <!-- < = form_for(@user) do |f| %> Automatigically developed form-->
    <%= form_with(model: @user) do |f| %> <!-- using Rails 5.1 http://guides.rubyonrails.org/working_with_javascript_in_rails.html -->
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>